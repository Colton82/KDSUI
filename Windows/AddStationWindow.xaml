<Window x:Class="KDSUI.Windows.AddStationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Station" Height="150" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Label and TextBox for the station name -->
        <TextBlock Text="Station Name:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="StationNameTextBox" Grid.Row="1" Margin="0,5,0,5" Height="25"/>
        <!-- Buttons at the bottom -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Content="Add" Width="70" Margin="0,0,5,0" Click="AddButton_Click"/>
            <Button Content="Cancel" Width="70" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
