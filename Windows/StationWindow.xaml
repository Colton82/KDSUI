<Window x:Class="KDSUI.Windows.StationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Station Display" Height="600" Width="900">
    <Grid>
        <TextBlock Text="{Binding StationName}" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="10"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="OrdersPanel" HorizontalAlignment="Center" />
        </ScrollViewer>
    </Grid>
</Window>
