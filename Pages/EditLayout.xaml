<Page x:Class="KDSUI.Pages.EditLayout"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KDSUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditLayout">

    <Grid>
        <ListBox Margin="400,92,183,92" Name="StationsList"
         AllowDrop="True" 
         PreviewMouseLeftButtonDown="StationsListBox_PreviewMouseLeftButtonDown" 
         PreviewMouseMove="StationsListBox_PreviewMouseMove" 
         Drop="StationsListBox_Drop"/>
        <Button Content="Add Station" HorizontalAlignment="Left" Margin="329,156,0,0" VerticalAlignment="Top" Click="Add_Click"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Back_Click"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="355,205,0,0" VerticalAlignment="Top" Name="Delete" Click="Delete_CLick"/>

    </Grid>
</Page>
