<Page x:Class="KDSUI.Pages.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Background="#f4f4f4"
      Title="Registration">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Centered Registration Card -->
        <Border Grid.Row="1" Width="350" Padding="20" Background="White" CornerRadius="10" 
                HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" Text="Register" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Username -->
                <TextBlock Grid.Row="1" Text="    Username" FontSize="14" Margin="0,0,0,5"/>
                <TextBox Grid.Row="2" x:Name="Username" Height="30" Padding="5" />

                <!-- Password -->
                <TextBlock Grid.Row="3" Text="Password" FontSize="14" Margin="15,5,0,5"/>
                <PasswordBox Grid.Row="4" x:Name="Password" Height="30" Padding="5" />

                <!-- Repeat Password -->
                <TextBlock Grid.Row="5" Text="Repeat Password" FontSize="14" Margin="15,5,0,5"/>
                <PasswordBox Grid.Row="6" x:Name="RepeatPassword" Height="30" Padding="5" Margin="0,-35,0,0"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,90,0,0">
                    <Button Content="Back" Width="100" Height="35" Click="Back_Click"
                            Background="Transparent" BorderBrush="#0078D7" Foreground="#0078D7" 
                            FontWeight="Bold" Cursor="Hand" Margin="0,0,10,0"/>
                    <Button Content="Register" Width="100" Height="35" Click="Register_Click"
                            Background="#0078D7" Foreground="White" FontWeight="Bold" 
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
